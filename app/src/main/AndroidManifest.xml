<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.on.conestogac.puppypal">

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreenTheme">
        <activity android:name=".activities.FitnessGoalActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AddFitnessGoalActivity" />
        <activity android:name=".activities.AddAssistantActivity" />
        <activity android:name=".activities.AddPetActivity" />
        <activity android:name=".activities.EditPetActivity" />
        <activity android:name=".activities.AddRecordActivity" />
        <activity android:name=".activities.PetHomepageActivity" />
    </application>

</manifest>